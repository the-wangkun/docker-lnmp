# .env - 2026年现代化开发环境配置

# 应用配置
APP_NAME="PHP7.1 Dev 2026"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=

# 数据库配置（可选）
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=dev_db
DB_USERNAME=dev
DB_PASSWORD=devpassword

# Redis配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=devpassword

# 邮件配置（开发环境）
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=
MAIL_FROM_ADDRESS="dev@localhost"
MAIL_FROM_NAME="Dev Environment"

# 会话配置
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# 缓存配置
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# 开发工具配置
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
IDE_DEBUGGER=VSCODE

# Docker配置
COMPOSE_PROJECT_NAME=php71dev2026
DOCKER_DEFAULT_PLATFORM=linux/amd64

# Xdebug配置
XDEBUG_MODE=debug,develop
XDEBUG_SESSION=PHPSTORM
PHP_IDE_CONFIG=serverName=DockerPHP